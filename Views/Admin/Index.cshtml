@model IEnumerable<App_Cafe.Models.MenuItem>

<h2 style="text-align: center; margin-bottom: 20px;">Quản lý Menu</h2>

<div class="text-center mb-3">
    <a asp-action="Create" class="btn btn-primary">Thêm món mới</a>
</div>

<div class="row" style="margin-top: 30px;">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>@item.Price VNĐ</strong></p>
                    <p class="card-text"><strong>Loại:</strong> @item.Category</p>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>