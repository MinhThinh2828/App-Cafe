@model App_Cafe.Models.MenuItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Chi tiết món: @Model.Name</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
            <p class="card-text"><strong>Giá:</strong> @Model.Price VNĐ</p>
            <p class="card-text"><strong>Loại:</strong> @Model.Category</p>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <p class="card-text"><strong>Ảnh:</strong></p>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-width: 300px;" />
            }
            else
            {
                <p class="card-text"><strong>Ảnh:</strong> Không có ảnh</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Xóa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>